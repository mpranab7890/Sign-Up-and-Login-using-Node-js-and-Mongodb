<% include header.ejs%>

<ul>
    <% errors.forEach(function(err){%>
    <li class="alert alert-danger"> <%= err.msg %> </li>
    <%}) %>
</ul>

 
<form class="" action="/users/register" method="post">

  <div>
    <h3>Signup Form </h3>
    <label for="name">Name</label>
    <input class="form-control" type="text" name="name" id="name" placeholder="Name">
    <br>

    <label for="email">Email</label>

    <input class="form-control" type="email" name="email" id="email" placeholder="Enter your email ">

    <br>
    <label for="password">Password</label>

    <input class="form-control" type="password" name="password" id="password" placeholder="Enter your password">

    <br>

    <label for="password2">Confirm Password</label>

    <input class="form-control" type="password" name="password2" id="password2" placeholder="Re-enter your password">

    <br>
    <label for="phno">Phone number</label>

    <input class="form-control" type="text" name="PhoneNumber" id="phno" placeholder="Enter your phone number">
    <br>

    <!-- <input class="form-control" type="text" name="Name"> -->
    <button type="submit" class="btn btn-primary">Submit</button>
  </div>
</form>
